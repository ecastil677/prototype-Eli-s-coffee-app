<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_x="50"
    android:background="#FEDCC9"
    tools:actionBarNavMode="list"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ElisCoffee.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        android:layout_width="match_parent"
        android:layout_height="1181dp"
        android:padding="10"
        android:paddingStart="10"
        android:paddingLeft="10"
        android:paddingTop="10"
        android:paddingEnd="0"
        android:paddingRight="0" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:autoText="false"
        android:background="#00503C1F"
        android:fontFamily="@font/sanchez"
        android:gravity="center|center_horizontal|center_vertical"
        android:paddingStart="50"
        android:paddingLeft="50"
        android:paddingTop="50"
        android:paddingEnd="50"
        android:text="Eli's Coffee Shop"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#503C1F"
        android:textColorHighlight="#876739"
        android:textIsSelectable="false"
        android:textSize="50" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B1A1A1"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="top|center"
        app:popupTheme="@style/Theme.ElisCoffee.PopupOverlay" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="882dp"
        android:orientation="vertical"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/espresso" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/americano" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_row="2"
                app:srcCompat="@drawable/capuccino" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_row="3"
                app:srcCompat="@drawable/latte" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="466dp"
                android:layout_height="108dp"
                android:fontFamily="@font/sanchez"
                android:padding="10"
                android:text="Espresso is great for work! You should enjoy our kind ;)"
                android:textAlignment="textStart"
                android:textColor="#503C1F"
                android:textSize="25"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="466dp"
                android:layout_height="108dp"
                android:fontFamily="@font/sanchez"
                android:padding="10"
                android:text="This coffee will be great to share with your friends!"
                android:textAlignment="textStart"
                android:textColor="#503C1F"
                android:textSize="25"
                app:layout_column="1"
                app:layout_row="2" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="466dp"
                android:layout_height="108dp"
                android:fontFamily="@font/sanchez"
                android:padding="10"
                android:text="This coffee will make you feel better in a good breakfast."
                android:textAlignment="textStart"
                android:textColor="#503C1F"
                android:textSize="25"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="466dp"
                android:layout_height="108dp"
                android:fontFamily="@font/sanchez"
                android:padding="10"
                android:text="We love our local latte coffee! Do you dare to try it out?"
                android:textAlignment="textStart"
                android:textColor="#503C1F"
                android:textSize="25"
                app:layout_column="1"
                app:layout_row="3" />

        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="214dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:backgroundTint="#614D4D"
            android:fontFamily="@font/sanchez"
            android:lineSpacingExtra="20sp"
            android:padding="1"
            android:text="Coffee Shop"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFECCF"
            android:textDirection="inherit"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sanchez"
            android:padding="10"
            android:text="Why our Coffee is the best in the region?"
            android:textAlignment="center"
            android:textColor="#503C1F"
            android:textSize="29" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/coffee" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="466dp"
            android:layout_height="108dp"
            android:fontFamily="@font/sanchez"
            android:padding="10"
            android:text="This coffee will make you feel better in a good breakfast."
            android:textAlignment="textStart"
            android:textColor="#503C1F"
            android:textSize="25" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>